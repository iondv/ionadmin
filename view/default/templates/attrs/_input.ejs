<%
if (typeof readonly === 'undefined') {
  readonly = false;
}
%>
<div class="form-group <%= required %>">
    <label for="obj-<%= attr %>" class="col-sm-2 control-label"><%= title %></label>
    <div class="col-sm-10">
      <input type="text"
             class="form-control" id="obj-<%=attr%>"
             name="obj-<%=attr%>" placeholder="<%=title%>"
             <%if (readonly) {%>readonly="true"
        <%}%>
      />
        <p class="error-block"></p>
    </div>
</div>