<% layout('../layouts/content') -%>

<style type="text/css">
  ul.ui-sortable li {
    cursor: pointer;
  }

  ul.ui-sortable li:hover {
    background: #eee;
  }
</style>

<script src="<%= module %>/js/recache.js"></script>

<div id="recache-container" class="box box-primary" style="position: relative; left: 0px; top: 0px;">
  <div class="box-header ui-sortable-handle with-border">
    <button type="button" id="refresh" class="btn btn-primary pull-left"><i class="fa fa-refresh"></i> <%=t('Пересчитать')%></button> 
  </div>
  <div class="box-body">
    <input type="checkbox" id="skipcd" /><span class="text"> <%=t('Пропускать зависимости')%></span>
  </div>
  <div class="box-body">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="#tab_classes" data-toggle="tab" aria-expanded="true">
             <i class="fa fa-file-code-o"></i> <%=t('Классы')%>
          </a>
        </li>
        <li class="">
          <a href="#tab_log" data-toggle="tab" aria-expanded="false">
            <i class="fa fa-terminal"></i> <%=t('Лог')%>
          </a>
        </li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab_classes">
          <div class="clearfix" style="margin-bottom: 10px;">
            <button type="button" id="check-all" class="btn btn-default pull-left" style="margin-right: 10px;">
              <i class="fa fa-check-square-o"></i> <%=t('Выделить все')%>
            </button> 
            <button type="button" id="uncheck-all" class="btn btn-default pull-left">
              <i class="fa fa-square-o"></i> <%=t('Снять выделение')%>
            </button>
          </div>
          <ul class="todo-list ui-sortable">
          </ul>
        </div>
        <div class="tab-pane" id="tab_log"></div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  (function($){
    $('#recache-container').ionadminRecache({});
  })(jQuery)
</script>
