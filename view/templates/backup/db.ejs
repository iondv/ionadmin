<% layout('../layouts/content') -%>

<% script(`/${module}/js/backup/db.js`) -%>

<div class="box">
  <div id="backup-loader" class="list-loader overlay" style="display: none;">
    <i class="fa fa-refresh fa-spin"></i>
  </div>
  <div class="box-body">
    <div class="list-tools">
      <button id="reload-backup"  class="reload-btn btn btn-default" title="<%=t('Обновить')%>"><span class="fa fa-refresh"></span></button>
      <% if (permissions[Permissions.WRITE]) { %>
      <button id="create-backup" class="create btn btn-success">
        <span class="sozdat"><%=t('Создать')%></span>
        <span class="loader fa fa-refresh fa-spin" style="display:none"></span>
      </button>
      <% } %>
      <% if (permissions[Permissions.DELETE]) { %>
      <button id="delete-backup" class="btn btn-danger"><%=t('Удалить')%></button>
      <% } %>
    </div>

    <table id="backup-list" class="table table-striped table-bordered table-striped multi-selectable">
      <thead><tr></tr></thead><tbody>
    </table>
  </div>
</div>

<div id="backup-create-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%=t('Создать резервную копию')%></h4>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group row required">
            <label for="backup-namespace" class="control-label col-lg-12"><%=t('Приложение')%></label>
            <div class="col-lg-12">
              <select id="backup-namespace"class="namespace form-control">
                <option value=""></option>
                <% for (let ns of namespaces) { %>
                <option value="<%-ns %>"><%-ns %></option>
                <% } %>
              </select>
            </div>
          </div>
          <div class="form-group row required">
            <label for="backup-name" class="control-label col-lg-12"><%=t('Название архива')%></label>
            <div class="col-lg-12">
              <input id="backup-name" type="text" class="filename form-control">
            </div>
          </div>

          <div class="form-group row mb0">
            <div class="col-sm-6">
              <div class="form-group row">
                <label for="backup-version" class="control-label col-lg-12"><%=t('Версия меты')%></label>
                <div class="col-lg-12">
                  <input id="backup-version" type="text" class="version form-control">
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group row">
                <label for="backup-filedir" class="control-label col-lg-12"><%=t('Файловая директория')%></label>
                <div class="col-lg-12">
                  <input id="backup-filedir" type="text" class="filedir form-control">
                </div>
              </div>
            </div>
          </div>

          <div class="form-group row">
            <label for="backup-namespace" class="control-label col-lg-12"><%=t('Импорт параметров безопасности')%></label>
            <div class="col-lg-12">
              <select id="backup-export-acl" class="namespace form-control">
                <option value=""><%=t('не импортировать')%></option>
                <option value="json">json</option>
                <option value="yml">yml</option>
              </select>
            </div>
          </div> 

          <div class="form-group row mb0">
            <div class="col-lg-12">
              <div class="checkbox">
                <label>
                  <input id="backup-skip-data" type="checkbox" class="skip-data">
                  <%=t('Не экспортировать объекты классов')%>
                </label>
              </div>
            </div>
          </div>

          <div class="form-group row mb0">
            <div class="col-lg-12">
              <div class="checkbox">
                <label>
                  <input id="backup-skip-files" type="checkbox" class="skip-files">
                  <%=t('Не экспортировать файлы')%>
                </label>
              </div>
            </div>
          </div>

          <div class="form-group text-right mt20 mr15">
            <button type="button" class="create btn btn-primary"><%=t('Создать')%></button>
            <button type="button" class="btn btn-default" data-dismiss="modal"><%=t('Закрыть')%></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
