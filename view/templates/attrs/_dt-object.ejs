
<div class="form-group <%= required %>">
    <label class="col-sm-2 control-label"><%= title %></label>
    <div class="col-sm-10">
        <input type="hidden" id="obj-<%= attr %>" name="obj-<%= attr %>">
        <div class="box">
            <div class="overlay" style="display:none;"><i class="fa fa-refresh fa-spin"></i></div>
            <div class="box-body">
                <div class="list-tools">
                    <button type="button" class="add-btn btn btn-success" title="<%=t('Добавить')%>"><%=t('Добавить')%></button>
                    <button type="button" class="edit-btn btn btn-primary" title="<%=t('Редактировать')%>"><%=t('Править')%></button>
                    <button type="button" class="delete-btn btn btn-danger" title="<%=t('Удалить')%>"><%=t('Удалить')%></button>
                </div>
                <table id="table-<%= attr %>" class="table table-bordered selectable">
                    <thead><tr></tr></thead>
                </table>
            </div>
        </div>
        <p class="error-block"></p>
    </div>
</div>